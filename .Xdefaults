URxvt*termName: rxvt-256color

URxvt*depth: 32
URxvt*transparent:false
URxvt*shading:0
URxvt*foreground: #eeeeee
URxvt*background: rgba:0000/0000/0000/eeee
URxvt*cursorColor: #ffffff
URxvt*cursorBlink: false
URxvt*borderless: 1
URxvt*urgentOnBell: true

! Font (use xfontsel to ensure correct syntax)
! Disable antialiasing if using Xft font.
URxvt*xftAntialias:   true
URxvt*font:           xft:Terminus:size=8
URxvt*boldFont:       xft:Terminus:size=8:bold
URxvt*italicFont:     xft:Terminus:size=8:italic
URxvt*bolditalicFont: xft:Terminus:size=8:bold:italic

Xft.dpi: 96

! Colors (black, red, green, yellow, blue, purple, cyan, white)
URxvt*dynamicColors: on
*color0: #000000
*color1: #bb2233
*color2: #449933
*color3: #aa6633
*color4: #222288
*color5: #8822aa
*color6: #3377aa
*color7: #9999aa
! Bright versions of the same
*color8: #333333
*color9: #ff7766
*color10: #77ff00
*color11: #ffee66
*color12: #8899cc
*color13: #cc88ee
*color14: #44eeff
*color15: #ffffff

! Scrolling
URxvt*geometry:         400x30
URxvt*buffered:         true
URxvt*saveLines:        32767
URxvt*scrollBar:        true
URxvt*secondaryScroll:  true
URxvt*scrollBar_right:  true
URxvt*scrollstyle:      plain
! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
! disable the scrollback buffer for the secondary screen (e.g., in less)
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! Perl extensions
URxvt*modifier:             alt
URxvt.perl-ext-common:      default,matcher,tabbed,font-size,clipboard,url-select,keyboard-select

! Clipboard
URxvt.keysym.M-c:           perl:clipboard:copy
URxvt.keysym.M-v:           perl:clipboard:paste
URxvt.keysym.M-C-v:         perl:clipboard:paste_escaped

! Enble URL highlighting and clicking (install urxvt-perls)
URxvt.matcher.button:       1
URxvt.colorUL:              #4682B4
URxvt.url-select.launcher:  google-chrome
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

! Tabs
URxvt.tabbed.tabbar-fg: 7
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    15
URxvt.tabbed.tab-bg:    4

! Change font size on-the-fly (install urxvt-font-size-git)
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
!URxvt.keysym.C-S-Up:   perl:font-size:incglobal
!URxvt.keysym.C-S-Down: perl:font-size:decglobal

